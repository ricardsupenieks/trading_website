<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>WallSt.</title>
</head>
<body>
<a id="top"></a>
<header>
    <nav>
        <div class="flex justify-between h-16 px-10 shadow items-center">
            <h1 class="text-xl lg:text-3xl font-bold"><a href="/">WallSt.</a></h1>
            {% if user %}
                <div class="flex items-center space-x-4">
                    <p class="text-gray-800 font-semibold">Welcome, {{ user.name }}</p>
                    <a href="/logout" class="text-gray-800 font-semibold hover:text-sky-600">LOGOUT</a>
                </div>
            {% else %}
                <div class="flex items-center space-x-4">
                    <a href="/sign-in" class="text-gray-800 font-semibold hover:text-sky-600">LOGIN</a>
                    <a href="/register" class="text-gray-800 font-semibold hover:text-sky-600">REGISTER</a>
                </div>
            {% endif %}
        </div>
    </nav>
</header>
<main>
    {% block content %}{% endblock %}
</main>
</body>
</html>